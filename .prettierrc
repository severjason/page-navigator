{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "endOfLine": "auto",
  "arrowParens": "always",
  "parser": "typescript",
  "importOrder": [
    "^use client'$",
    "^react$",
    "^react/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^\\./(.*)$",
    "^\\.\\.(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
